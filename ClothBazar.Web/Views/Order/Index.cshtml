@model OrdersViewModel

@{
    ViewBag.Title = "Orders";
}


<section class="flat-row flat-iconbox">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title-section">
                    <h2 class="title">
                        Orders
                    </h2>
                </div>
            </div>
        </div>
        <div id="tableContainer">
            <div>
                <form method="post">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label>Search</label>
                                <input class="form-control" id="searchTxt" name="UserID" autocomplete="off" value="@Model.UserID" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Action</label>
                                <div class="row">
                                    <div class="col-md-6 pr-0">
                                        <button class="btn btn-primary form-control" type="submit" id="searchBtn">Search</button>
                                    </div>
                                    <div class="col-md-6 pr-0">
                                        <a class="btn btn-primary form-control" href="@Url.Action("Index","Order", new { pageNo = 1 })" id="resetBtn">Reset</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>


            <div>
                <table id="OrdersTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th class="font-weight-bold">User ID</th>
                            <th class="font-weight-bold">Total Price</th>
                            <th class="font-weight-bold">Status</th>
                            <th class="font-weight-bold wrap-td">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Orders != null && Model.Orders.Count > 0)
            {

                foreach (var order in Model.Orders)
                {
                                <tr>
                                    <td>@order.UserID</td>
                                    <td>
                                        @order.TotalAmount
                                    </td>
                                    <td>@order.Status</td>
                                    <td class="wrap-td">
                                        <a class="detailBtn btn btn-danger" href="@Url.Action("Detail", "Order", new { ID = order.ID })">Details</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td class="text-danger" colspan="4">No Orders found.</td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (Model.Pager != null && Model.Pager.TotalPages > 1)
                {
                    <div class="product-pagination text-center margin-top-11 clearfix">
                        <ul class="flat-pagination">

                            @if (Model.Pager.CurrentPage > 1)
                            {
                                <li class="prev">
                                    <a class="pageButtons prev" data-pageno="1" href="@Url.Action("Index","Order", new { userID = Model.UserID, status = Model.Status, pageNo = 1 })">1</a>
                                </li>
                                <li class="prev">
                                    <a class="pageButtons prev" data-pageno="@(Model.Pager.CurrentPage - 1)" href="@Url.Action("Index","Order", new { userID = Model.UserID, status = Model.Status, pageNo = Model.Pager.CurrentPage - 1 })"><i class="fa fa-angle-left"></i></a>
                                </li>
                            }

                            @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                            {
                                string activeClass = Model.Pager.CurrentPage == page ? "active" : string.Empty;

                                <li class="@activeClass">
                                    <a class="pageButtons prev" data-pageno="@page" href="@Url.Action("Index","Order", new { userID = Model.UserID, status = Model.Status, pageNo = page })" >@page</a>
                                </li>

                            }

                            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                            {
                                <li>
                                    <a class="pageButtons prev" data-pageno="@(Model.Pager.CurrentPage + 1)" href="@Url.Action("Index","Order", new { userID = Model.UserID, status = Model.Status, pageNo = Model.Pager.CurrentPage + 1 })"><i class="fa fa-angle-right"></i></a>
                                </li>

                            }

                        </ul>
                    </div>
                }

            </div>
        </div>
        <hr />
    </div>
</section>

