@model List<Product>
@{
    ViewBag.Title = "ProductTable";
}

<br />
<div>

    <form method="post">

        <input id="searchTxt" name="Search" />

        <button type="button" id="searchBtn">Search</button>
    </form>
    <br />

    <button type="button" id="newBtn">Add New</button>

</div>



<div>
    <br />
    <table class="table-bordered table">
        <thead>
            <tr>
                <td>Product Name</td>
                <td>Category</td>
                <td>Price</td>
                <td>Action</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>-</td>
                    <td>@product.Price</td>
                    <td>
                        <button class="editProduct" data-id="@product.ID">Edit</button>
                        <button class="deleteProduct" data-id="@product.ID">Delete</button>
                    </td>
                </tr>
            }


        </tbody>

    </table>

</div>



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>
        $(document).ready(function () {

            $("#searchBtn").click(function () {

                var searchVal = $("#searchTxt").val();

                $.ajax({
                    url: '/Product/ProductTable',
                    data: {
                        search: searchVal
                    }
                })
                .done(function (response) {
                    $("#tableContainer").html(response);
                })

                .fail(function (XMLHttpRequest, textStatus, errorThrown) {

                });

            });


            $("#newBtn").click(function () {

                $.ajax({
                    url: '/Product/Create',
                })

                .done(function (response) {
                    $("#addProduct").html(response);
                })

                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("fail");

                });

            });
            
            $(".editProduct").click(function () {

                $.ajax({
                    url: '/Product/Edit',
                    data: {
                        ID : $(this).attr('data-id')
                    }
                })

                .done(function (response) {
                    $("#addProduct").html(response);
                })

                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("fail");

                });

            });

            $(".deleteProduct").click(function () {

                var confirmDelete = confirm("Are your sure, you want to delete this product?");
                if (confirmDelete)
                {
                    $.ajax({
                        type: 'POST',
                        url: '/Product/Delete',
                        data: {
                            ID: $(this).attr('data-id')
                        }
                    })
                    .done(function (response) {
                        $("#tableContainer").html(response);
                    })
                    .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                        alert("fail");

                    });
                }

            });


        });


    </script>

